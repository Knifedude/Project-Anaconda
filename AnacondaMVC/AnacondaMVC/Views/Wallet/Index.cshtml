@using AnacondaMVC.Models
@model Wallet

@{
    ViewBag.Title = "Index";
}



<div class="jumbotron">
    <h1>Wallet</h1>
</div>
<div class="row">
    <div class="col-md-2">@Html.Label("Credits")</div>
    <div class="col-md-1">@Model.Credits</div>
</div>
<div class="row">
    <div class="col-md-2">@Html.Label("Casino Credits")</div>

    <div class="col-md-1">
        @Model.CasinoCredits
        <hr class="hr-strong"/>
    </div>
   
</div>
<div class="row">
    <div class="col-md-2">@Html.Label("Total Balance")</div>

    <div class="col-md-1"> @( Model.CasinoCredits + Model.Credits ) </div>
</div>

<div class="row">
    <div class="col-lg-1">
        <button id="addCreditsButton" data-toggle="modal" data-target=".bs-example-modal-lg" class="btn btn-default">Add Credits</button>
    </div>
</div>

<div id="addCreditsModal" class="modal fade" tabindex="-1" role="dialog">
    @using (@Html.BeginForm("AddCredits", "Wallet", FormMethod.Post, new {@class = "form-horizontal",}))
    {
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add Credits</h4>
                </div>
                <div class="modal-body">
                    @Html.TextBox("creditsToAdd", 1, new {@type = "number", @min = 1})

                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary" type="submit" value="Save Changes">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div><!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    }
</div><!-- /.modal -->




@section Scripts {
    <script>
    $('#addCreditsButton').on('click', function () {
        $('#addCreditsModal').focus();
        $('#addCreditsModal').modal('show');
    })
    </script>
}






