@{
    ViewBag.Title = "Index";
}


<div class="jumbotron">
    <h1>Wallet</h1>
</div>
<div class="row">
    <div class="col-md-2">@Html.Label("Credits")</div>
    <div class="col-md-1">@Model.Credits</div>
</div>
<div class="row">
    <div class="col-md-2">@Html.Label("Casino Credits")</div>

    <div class="col-md-1">
        @Model.CasinoCredits
        <hr class="hr-strong"/>
    </div>
   
</div>
<div class="row">
    <div class="col-md-2">@Html.Label("Total Balance")</div>

    <div class="col-md-1"> @( Model.CasinoCredits + Model.Credits ) </div>
</div>

<div class="row">
    <div class="col-lg-1">
        <button id="addCreditsButton" data-toggle class="btn">Add Credits</button>
    </div>
</div>


<div id="addCreditsModal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
            <p>One fine body</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


<script>
    $('#addCreditsButton').on('click', function () {
        $('#addCreditsModal').focus();
        Console.log('test');
        $('#addCreditsModal').modal('show');


    })
</script>





